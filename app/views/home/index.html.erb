
<body>
<h1>Nadchodzące zajęcia</h1>


<%= link_to 'Zobacz wszystkie zajęcia', 'schedule/schedules' %><br><br>

<table id="table_schedule" class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th>ID</th>
      <th>Nazwa</th>
      <th>ID uczestnika</th>
      <th>Prowadzący</th>
      <th>Data</th>
  </tr>
 </thead>
 
 <tbody>
  <% @schedule.each do |schedule| %>
    <tr>
      <td><%= schedule.id %></td>
      <td><%= schedule.name %></td>
      <td><%= current_user.id %></td>
      <td><%= schedule.teacher.firstname %><%= " " %><%= schedule.teacher.lastname %></td>
      <td><%= schedule.date.strftime("%d-%m-%Y %H:%M") %></td>
    </tr>
  <% end %>
</tbody>
</table>

</body>